<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BrawlerDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/header_shape">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_brawler_trophies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lilita_one"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:layout_constraintLeft_toLeftOf="@id/text_brawler_name"
                app:layout_constraintRight_toRightOf="@id/text_brawler_name"
                app:layout_constraintTop_toBottomOf="@id/text_brawler_name"
                tools:text="481" />

            <TextView
                android:id="@+id/text_brawler_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lilita_one"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_brawler_portrait"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Shelly" />

            <ImageView
                android:id="@+id/img_brawler_portrait"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                android:foreground="@drawable/border_round_shape"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/b16000000" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/solid_round_shape"
                android:foreground="@drawable/ic_back_arrow"
                android:foregroundTint="#fff"
                android:backgroundTint="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <LinearLayout
                android:layout_marginHorizontal="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="15dp">

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilita_one"
                    android:gravity="center"
                    android:text="Highest Trophies"
                    android:textSize="15sp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/text_brawler_highest_trophies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilita_one"
                    android:gravity="center"
                    android:textSize="18sp"
                    tools:text="490" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="15dp">

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilita_one"
                    android:gravity="center"
                    android:text="Power Level"
                    android:textSize="15sp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/text_brawler_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilita_one"
                    android:gravity="center"
                    android:textSize="18sp"
                    tools:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="15dp">

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilita_one"
                    android:gravity="center"
                    android:text="Rank"
                    android:textSize="15sp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/text_brawler_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilita_one"
                    android:gravity="center"
                    android:textSize="18sp"
                    tools:text="15" />

            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>